<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane prefHeight="150.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="phase1.SelectTradeTypeScreen">
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="150.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Select the type of transaction you would like to make:">
               <VBox.margin>
                  <Insets bottom="15.0" top="8.0" />
               </VBox.margin>
            </Label>
            <VBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="64.0" prefWidth="200.0" spacing="5.0">
               <children>
                  <RadioButton fx:id="borrowButton" mnemonicParsing="false" onAction="#selectedTradeType" text="Borrow an item from a user" />
                  <RadioButton fx:id="lendButton" mnemonicParsing="false" onAction="#selectedTradeType" text="Lend an item to a user" />
                  <RadioButton fx:id="tradeButton" mnemonicParsing="false" onAction="#selectedTradeType" text="Trade items with a user" />
               </children>
            </VBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="44.0" prefWidth="300.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#okButtonClicked" prefHeight="25.0" prefWidth="55.0" text="OK">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>

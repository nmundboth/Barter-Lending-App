<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="96.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="phase2.ConfirmAvailableScreen">
   <center>
      <VBox alignment="CENTER" prefHeight="78.0" prefWidth="450.0" BorderPane.alignment="BOTTOM_CENTER">
         <children>
            <Label alignment="CENTER" contentDisplay="BOTTOM" prefHeight="16.0" prefWidth="392.0" text="Last time you logged out, you marked yourself as unavailable for trading." textAlignment="CENTER" wrapText="true">
               <VBox.margin>
                  <Insets left="8.0" right="8.0" top="10.0" />
               </VBox.margin>
            </Label>
            <Label alignment="CENTER" contentDisplay="BOTTOM" prefHeight="10.0" prefWidth="369.0" text="Would you like to log in and mark yourself as available for trading?" textAlignment="CENTER" wrapText="true" />
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="TOP_CENTER" prefHeight="38.0" prefWidth="450.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="yesBtn" mnemonicParsing="false" onAction="#yesBtnClicked" text="Yes">
               <HBox.margin>
                  <Insets bottom="5.0" right="5.0" />
               </HBox.margin>
               <padding>
                  <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
               </padding>
            </Button>
            <Button fx:id="noBtn" mnemonicParsing="false" onAction="#noBtnClicked" text="No">
               <padding>
                  <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
               </padding>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
